<div class="grid">
  <% list.forEach(function(d){ %>
    <a class="card spa-link" href="/watch/<%= d.bookId %>">
      <div class="poster">
        <img loading="lazy" src="<%= d.bookCover %>" alt="<%= d.bookName %>"/>
        <div class="badge"><i class="ri-fire-line"></i> <%= d.playCount || 'â€”' %></div>
      </div>
      <div class="meta">
        <div class="name" title="<%= d.bookName %>"><%= d.bookName %></div>
        <div class="tags">
          <% (d.tags || []).slice(0,3).forEach(function(t){ %>
            <span class="tag"><%= t %></span>
          <% }) %>
        </div>
      </div>
    </a>
  <% }) %>
</div>
